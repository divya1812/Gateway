
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/alertifyjs/alertify.min.css" rel="stylesheet" />
    <link href="~/Content/alertifyjs/themes/default.min.css" rel="stylesheet" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*
                        <li>@Html.ActionLink("User Profile", "Index", "tbl_user")</li>
                        <li>@Html.ActionLink("Register", "Register", "tbl_user")</li>
                        <li>@Html.ActionLink("Login", "Login", "tbl_user")</li>
                    *@

                    @if (Session["UserId"] != null)
                    {

                        using (Html.BeginForm("Logout", "tbl_user", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                        {
                            @Html.AntiForgeryToken()

                            <ul class="nav navbar-nav navbar-right">
                                <li style="font-size:20px">@Html.ActionLink("User Profile", "Index", "tbl_user")</li>
                                <li style="margin-left:800px" class="navbar-nav"><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out" style="font-size:20px;">Logout </i></a></li>

                            </ul>
                        }
                    }
                    else
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li style="font-size:20px">@Html.ActionLink("User Profile", "Index", "tbl_user")</li>
                            <li style="font-size:20px">@Html.ActionLink("Register", "Register", "tbl_user")</li>
                            <li style="font-size:20px">@Html.ActionLink("Login", "Login", "tbl_user")</li>
                        </ul>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <br />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/alertify.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
